<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.g02.yama">


    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".YAMAApp"
        android:allowBackup="true"
        android:icon="@drawable/app_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/app_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:fullBackupContent="true">

        <activity android:name=".activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activities.ChatActivity"> </activity>
        <activity
            android:name=".activities.UserInfoActivity"
            android:label="@string/title_activity_user_info"
            android:theme="@style/AppTheme"> </activity>

        <activity android:name=".activities.TeamActivity"> </activity>

        <activity android:name=".activities.TeamMemberActivity"> </activity>
        <activity android:name=".activities.UserChatActivity" />
    </application>
</manifest>